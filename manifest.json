{
    "manifest_version": 3,
    "name": "bilibili小插件 by淺い空",
    "version": "2.0.0",
    "description": "bilibili小插件",
    "icons": {
        "16": "img/favicon16-16.png",
        "48": "img/favicon48-48.png",
        "128": "img/favicon128-128.png"
    },
    "background": {
        "service_worker": "dist/js/background.js"
    },
    "action": {
        "default_icon": "img/favicon48-48.png",
        "default_title": "bilibili小插件 by淺い空",
        "default_popup": "dist/page/popup.html"
    },
    "content_scripts": [{
        "matches": ["https://*.bilibili.com/*"],
        "js": ["dist/js/bilibili_page_inject.js", "lib/jquery-3.5.1.min.js"],
        "run_at": "document_start"
    }, {
        "matches": ["https://*.bilibili.com/video/*"],
        "js": ["dist/js/bilibili_video_page_inject.js", "lib/jquery-3.5.1.min.js"],
        "run_at": "document_start"
    }],
    "permissions": [
        "tabs",
        "scripting",
        "contextMenus",
        "storage",
        "cookies",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://*.bilibili.com/*"
    ],
    "homepage_url": "https://www.dxytoll.top",
    "options_page": "dist/page/setting.html",
    "omnibox": {
        "keyword": "bs"
    },
    "default_locale": "zh_CN"
}